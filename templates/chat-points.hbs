<div class="rnk-mystix-chat-points" data-actor-id="{{actorId}}">
    <div class="rnk-mystix-chat-points-header">
        <i class="fas fa-scroll"></i> {{actorName}}'s Points
    </div>
    <div class="rnk-mystix-chat-points-body">
        <button class="rnk-mystix-chat-roll-btn hero" data-type="hero" title="Spend 1 Hero Point to Reroll">
            <span class="label">H:</span>
            <span class="value">{{heroPoints}}</span>
        </button>
        <button class="rnk-mystix-chat-roll-btn mystic" data-type="mystic" title="Spend 1 Mystic Point to Activate">
            <span class="label">M:</span>
            <span class="value">{{mysticPoints}}</span>
        </button>
    </div>
</div>

